---
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/widgets/Hero.astro";
import PostList from "@/components/widgets/PostList.astro";
---

<Layout
  title="thenzolima"
  description="Product Designer com foco em experiência digital. Utilizo do branding e desenvolvimento para transformar ideias em produtos funcionais, acessíveis e visualmente coerentes."
>
